<p id="notice"><%= notice %></p>
<style>
p
{
  white-space:pre-wrap;
} 
</style>
<div class="row" style ='width:95%; max-width: 800px; margin-left: 15px;'>
  <h2 style = 'color: FireBrick;'>
    <%=@post.title%>
  </h2>
  <p style = 'white-space: initial;'>
    <i class="fa fa-clock-o"></i> Posted: <%=l @post.created_at, :format=> :post_datetime %>
  </p>
  <span style="line-height:60px"></span> 
  <%= raw @post.content%>
  <br />
 
  <% if logged_in?%>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%end%>
		
</div>
