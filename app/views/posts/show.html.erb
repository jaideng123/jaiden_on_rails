<p id="notice"><%= notice %></p>
<style>
th,td
{
border:2px solid FireBrick;
}
p
{
white-space:pre-wrap;
} 
</style>
<table style='width:95%; max-width: 900px;'>
  <tbody>
      <tr>
		<td>
        <h2>
		<%= @post.title%>
		</h2>
		<%=l @post.created_at, :format=> :post_datetime %><br />
		<p>
        <%= @post.content%>
		</p>
		<br />
		
 
		<% if logged_in?%>
        <%= link_to 'Edit', edit_post_path(@post) %>
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%end%>
		</td>
		
      </tr>
  </tbody>
</table>
