<style>
th,td
{
border:2px solid FireBrick;
}
</style>
<table style='width:75%'>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
		<td>
        <h2>
		<%= post.title %>
		</h2>
        <%= post.content %><br />
		Posted: <%= post.created_at%><br />
        <%= link_to 'Show', post %>
		<% if logged_in?%>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
		<%end%>
		</td>
		
      </tr>
    <% end %>
  </tbody>
</table>

<br>

